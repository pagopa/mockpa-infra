<policies>
    <inbound>
        <set-variable name="requestPath" value="@(context.Request.Url.Path)" />
        <set-variable name="organizationFiscalCode" value="@{
            return context.Variables.ContainsKey("User.Id") ? context.User.Id : "Unknown" ;
        }" />
        <base />
        <!--
            subset/restriced api of api/payments-service/v1/internal/rest/_openapi.json.tpl (INTERNAL) without /payments/{organizationfiscalcode}
        -->
        <rewrite-uri template="@("/payments/"+(string)context.Variables["organizationFiscalCode"]+"/"+(string)context.Variables["requestPath"])" copy-unmatched-params="true" />
        <set-backend-service base-url="https://${hostname}" />
        <rate-limit-by-key calls="150" renewal-period="10" counter-key="@(context.Request.Headers.GetValueOrDefault("X-Forwarded-For"))" remaining-calls-header-name="x-rate-limit-remaining" retry-after-header-name="x-rate-limit-retry-after" />
    </inbound>
    <outbound>
        <base />
    </outbound>
    <backend>
        <base />
    </backend>
    <on-error>
        <base />
    </on-error>
</policies>
