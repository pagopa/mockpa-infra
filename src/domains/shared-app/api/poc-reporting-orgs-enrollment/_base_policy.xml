<policies>
    <inbound>
      <choose>
        <when condition="@(context.Request.Url.Query.GetValueOrDefault("frameworkType") == "micronaut")">
          <set-backend-service base-url="https://${hostname}/pagopa-poc-micronaut-service" />
        </when>
        <when condition="@(context.Request.Url.Query.GetValueOrDefault("frameworkType") == "quarkus")">
          <set-backend-service base-url="https://${hostname}/pagopa-poc-quarkus-service" />
        </when>
      </choose>
      <base />
    </inbound>
    <outbound>
      <base />
    </outbound>
    <backend>
      <base />
    </backend>
    <on-error>
      <base />
    </on-error>
</policies>
